<div class="container py-3">


<h4>Choose a level</h4>
</div>

<section>
	<% @languages.each do |language| %>
	  <div class="container py-3">
	    <div class="card">
	      <div class="row ">
	        <div class="col-md-3">
            <img src="https://placeholdit.imgix.net/~text?txtsize=38&txt=200%C3%97200&w=200&h=200">
	        </div>
          <div class="col-md-5 px-3">
            <div class="card-block px-3">
              <h1 class="card-title"><%= language.language_name %></h1>
              <p class="card-text">Some text</p>
              <a href="/coding_languages/<%= language.id %>" class="btn btn-primary">Start Here</a>
            </div>
          </div>
	        </div>
	      </div>
	    </div>
	<% end %>
</section>

<a class="submit" href="/coding_languages/1">ruby</a>
<a class="submit" href="/coding_languages/2">JavaScript</a>


